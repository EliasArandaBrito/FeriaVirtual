@using FeriaVirtual.Negocio;

<!-- Agrega las metaetiquetas para hacer que la página sea responsive -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta name="viewport" content="width=device-width, initial-scale=1">

<style>
    body {
        font-family: Arial, sans-serif;
    }

    /* Estilo para la tabla */
    .table-container {
        background-color: white; /* Fondo blanco para la tabla */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    }
</style>

@{ ViewBag.Title = "Mis Medios Postulados";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }

<div style="position: absolute; top: 60px; left: 10px;">
    <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-transparent" style="border: 1px solid;">Volver</a>
</div>

<div class="container">
    <h2 class="mt-4">@ViewBag.Title</h2>

    @{ List<SubastaMedio> submedios = (List<SubastaMedio>)ViewBag.subastamedio; }
    @{   MedioTransporte m = new MedioTransporte();}

    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-striped mt-3">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Patente</th>
                        <th>¿Seleccionada?</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var submedio in submedios)
                    {
        <tr>
            <td>@m.ReadByMedioId(submedio.MedioId).FirstOrDefault().Patente</td>
            <td>
                @if (submedio.Selected == 0)
                {
                <span class="badge badge-danger">No</span> }
                else
                {
                <span class="badge badge-success">Si</span>}
                    </td>
        </tr>
}
                </tbody>
            </table>
        </div>
    </div>
</div>
